<main role="main">
    <div class="album py-5 bg-light">
        <div class="container">
            {{#if projects}}
                <div class="row">
                    {{#each projects}}
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                            <div class="card-body">
                                <h3 class="card-title">{{this.name}}</h3>
                                <p class="card-text">{{this.description}}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href='/project/{{this.alias}}'  class="btn btn-sm btn-outline-secondary">Details</a>
                                        <a  href="{{this.gitHubLink}}" class="btn btn-sm btn-outline-secondary">Github</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            {{else}}
            <p>No projects available</p>
            {{/if}}
        </div>
    </div>
</main>