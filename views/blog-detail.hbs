<main role="main">
    <div class="album py-3 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-3 project-detail-sb">
                    <div class="project-sidebar-block mb-4">
                        <h2>Categories</h2>
                        {{#each categories}}
                            <div class="project-sidebar-links">
                                <a class="bc-item" href="/blog?category={{this}}">{{this}}</a>
                            </div>
                        {{/each}}
                    </div>
                    <hr>
                    <hr>
                    <div class="project-sidebar-block mb-4">
                        <h2>Archives</h2>
                        <div class="project-sidebar-links">
                            <div class="project-sidebar-links">
                                <a class="bc-item" href="#">May 2018</a>
                            </div>
                            <div class="project-sidebar-links">
                                <a class="bc-item" href="#">June 2018</a>
                            </div>
                            <div class="project-sidebar-links">
                                <a class="bc-item" href="#">September 2018</a>
                            </div>
                            <div class="project-sidebar-links">
                                <a class="bc-item" href="#">Jan 2017</a>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-md-9">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item bc-item" >Home</li>
                            <li class="breadcrumb-item bc-item">Projects</li>
                            <li class="breadcrumb-item" aria-current="page">{{blog.name}}</li>
                        </ol>
                    </nav>
                    <h1 class="display-3">{{blog.name}}</h1>
                    <br>
                    <p>{{blog.description}}</p>
                    <br>
                    <div id="projectSlider" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/image/ashu.JPG" alt="Slide 1">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/image/logo.png" alt="Slide 1">
                            </div>
                           
                        </div>
                        <a class="carousel-control-prev" href="#projectSlider" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#projectSlider" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <br>
                    <h2>Watch a Live Demo <a class="bc-item" href="#">here</a></h2>
                </div>
            </div>
        </div>
    </div>

</main>